<Page x:Class="todo.Reg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:todo"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Reg">

    <Grid Height="600" Width="800" Background="White">
        <Image Height="150" Margin="51,42,593,0" VerticalAlignment="Top" Source="/images/logo.png"/>
        <Label Content="Welcome back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="50" FontSize="36" Margin="426,42,0,0"/>
        <Label Content="Имя пользователя" FontSize="22" Margin="426,100,173,457"/>

        <TextBox Name="NameUser"
           Text="Введите имя пользователя"
           TextWrapping="Wrap"
           BorderThickness="0,0,0,1"
           Opacity="1"
           FontSize="14"
           Foreground="Gray"
           VerticalAlignment="Top"
           HorizontalAlignment="Left"
           Width="200"
           GotFocus="NameUser_GotFocus"
           LostFocus="NameUser_LostFocus" Margin="431,148,0,0"/>



        <Label Content="Пароль" FontSize="22" Margin="426,253,195,309"/>

        <TextBox Name="ParolUser"
           Text="Введите пароль"
           TextWrapping="Wrap"
           BorderThickness="0,0,0,1"
           Opacity="1"
           FontSize="14"
           Foreground="Gray"
           VerticalAlignment="Top"
           HorizontalAlignment="Left"
           Width="200"
           GotFocus="ParolUser_GotFocus"
           LostFocus="ParolUser_LostFocus" Margin="427,306,0,0"/>

        <Label Content="Повторите пароль" FontSize="22" Margin="426,331,173,231"/>
        <Button Margin="431,472,69,88" Background="#FFF96060" BorderBrush="#FFF96060" Foreground="White" Content="Назад" Width="300" Height="40" FontSize="16">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5, 5, 15, 15"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Margin="431,426,69,134" Background="#FFF96060" BorderBrush="#FFF96060" Foreground="White" Content="Зарегистрироваться" Width="300" Height="40" FontSize="16">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="15, 15, 5, 5"/>
                </Style>
            </Button.Resources>
        </Button>
        <TextBox x:Name="Parol2User"
           Text="Повторите пароль"
           TextWrapping="Wrap"
           BorderThickness="0,0,0,1"
           Opacity="1"
           FontSize="14"
           Foreground="Gray"
           VerticalAlignment="Top"
           HorizontalAlignment="Left"
           Width="200"
           GotFocus="Parol2User_GotFocus"
           LostFocus="Parol2User_LostFocus"
           Margin="431,374,0,0"/>


        <TextBox x:Name="EmailUser"
              Text="exam@yandex.ru"
              TextWrapping="Wrap"
              BorderThickness="0,0,0,1"
              Opacity="1"
              FontSize="14"
              Foreground="Gray"
              VerticalAlignment="Top"
              HorizontalAlignment="Left"
              Width="200"
              GotFocus="EmailUser_GotFocus"
              LostFocus="EmailUser_LostFocus"
              Margin="431,215,0,0"/>
        <Label Content="Почта" FontSize="22" Margin="426,172,195,390"/>

    </Grid>
</Page>
